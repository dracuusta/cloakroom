extends layout

block content
  link(rel='stylesheet' href='../styles/index.css')
  h1.summary-title
    h2.summary-title AI Summary
    p.summary-title=summary_text
  if posts.length
    each post in posts
      .post
       h3.post-title=post.title
        p.post-message=post.message
        p.post-date=post.posted_at
        if reqUser
         if post.user
          p.post-author=post.user.first_name
